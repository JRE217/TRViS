<?xml version="1.0" encoding="utf-8" ?>
<Grid
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:dtac="clr-namespace:TRViS.DTAC"
	x:Class="TRViS.DTAC.TimetableHeader"
	ColumnDefinitions="{x:Static dtac:VerticalStylePage.TimetableColumnWidthCollection}">
	<Grid.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Style_VerticalView.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Grid.Resources>
	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="0"
		LineBreakMode="CharacterWrap"
		Text="運転&#xa;時分"/>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="0"/>

	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="1"
		Text="停車場名"/>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="1"/>

	<Frame
		Grid.Column="2"
		Margin="16,4"
		Padding="0"
		HasShadow="False"
		BorderColor="{x:Null}"
		BackgroundColor="{StaticResource DarkerGreen}">
		<Label
			Style="{StaticResource HeaderLabel}"
			Margin="0"
			Padding="0"
			HorizontalOptions="Center"
			VerticalOptions="Center"
			FontSize="{Binding FontSize_Large, Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type dtac:TimetableHeader}}}"
			FontAttributes="Bold"
			TextColor="White"
			Text="着"/>
	</Frame>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="2"/>

	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="3"
		Text="発  (通)"/>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="3"/>

	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="4"
		LineBreakMode="CharacterWrap"
		Text="着線&#xa;発線"/>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="4"/>

	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="5"
		LineBreakMode="CharacterWrap"
		Text="制限&#xa;速度"/>
	<Line
		Style="{StaticResource SeparatorLine}"
		Grid.Column="5"/>

	<Label
		Style="{StaticResource HeaderLabel}"
		Grid.Column="6"
		Text="記事"/>

	<Frame
		Grid.Column="7"
		CornerRadius="4"
		Padding="0"
		Margin="4,6"
		BorderColor="{x:Null}"
		HasShadow="False"
		BackgroundColor="White">
		<Grid
			Margin="{OnPlatform iOS='4,6', MacCatalyst='4,6', Default='4,0'}">
			<Label
				Style="{StaticResource HeaderLabel}"
				HorizontalOptions="Start"
				VerticalOptions="Start"
				FontAttributes="Bold"
				Text="ﾏｰｶｰ"/>
			<Label
				Style="{StaticResource HeaderLabel}"
				HorizontalOptions="End"
				VerticalOptions="Center"
				FontFamily="MaterialIconsRegular"
				FontSize="44"
				ScaleX="0.5"
				AnchorX="1"
				TextColor="{StaticResource DarkerGreen}"
				Text="&#xe9a2;"/>
		</Grid>
	</Frame>
</Grid>
