<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:TRViS.DTAC"
	xmlns:viewmodels="clr-namespace:TRViS.ViewModels"
	x:Class="TRViS.DTAC.ViewHost"
	x:DataType="viewmodels:DTACViewHostViewModel"
	BackgroundColor="White"
	Title="{Binding AppViewModel.SelectedTrainData.WorkName}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="64"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<HorizontalStackLayout
			BackgroundColor="#eee">
		</HorizontalStackLayout>

		<local:Hako
			IsVisible="{Binding IsHakoMode}"
			Grid.Row="1"/>

		<local:WorkAffix
			IsVisible="{Binding IsWorkAffixMode}"
			Grid.Row="1"/>

		<local:VerticalStylePage
			IsVisible="{Binding IsVerticalViewMode}"
			BindingContext="{Binding AppViewModel.SelectedTrainData}"
			Grid.Row="1"/>
	</Grid>
</ContentPage>
